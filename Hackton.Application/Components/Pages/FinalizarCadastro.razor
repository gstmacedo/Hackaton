    private AlunoCompleto model = new()
    {
        Aluno = new Aluno(),
        Endereco = new Endereco(),
        
    };

    [Parameter]
    public string? token { get; set; }

    private IBrowserFile? arquivoSelecionado;

    private string? mensagem;
    
